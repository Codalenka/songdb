<h1>New Song</h1>

<%= form_for @song do |f| %>

    <ul>
      <% @song.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
      <% end %>
    </ul>


    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :artist_id %>
    <%= f.collection_select(:artist_id, Artist.all, :id, :name) %>

    <%= f.submit "Create" %>
<% end %>